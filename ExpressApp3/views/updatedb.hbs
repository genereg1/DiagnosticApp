<div class="container">
    <div class="row">
        <div class="five columns">
<section class="insert" id="formstyle">
    <h3>Insert Data</h3>
    <form action="/insert" method="post">
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Content</label>
            <input type="text" id="content" name="content">
        </div>
        <div class="input">
            <label for="author">Author</label>
            <input type="text" id="author" name="author">
        </div>        
        <button type="submit">INSERT</button>
    </form>
</section>
        </div>
    </div>
    <div class="row">
        <div class="five columns">
    <section class="get" id="formstyle">
    <h3>Get Data</h3>
    <a href="/get-data">LOAD DATA</a>
    <div>
        {{# each items }}
            <article class="item">
                <div>Title: {{ this.title }}</div>
                <div>Content: {{ this.content }}</div>
                <div>Author: {{ this.author }}</div>
                <div>ID: {{ this._id }}</div>
            </article>
        {{/each}}
    </div>
</section>
        </div>
    </div>
    <div class="row">
        <div class="five columns">
<section class="update" id="formstyle">
    <h3>Update Data</h3>
    <form action="/update" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="name">
        </div>
        <div class="input">
            <label for="content">Content</label>
            <input type="text" id="content" name="age">
        </div>
        <div class="input">
            <label for="author">Author</label>
            <input type="text" id="author" name="description">
        </div>
        <button type="submit">UPDATE</button>
    </form>
{{!--</section>--}}
</section>
        </div>
        </div>
        <div class="row">
        <div class="five columns">
<section class="delete" id="formstyle">
    <h3>Delete Data</h3>
    <form action="/delete" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <button type="submit">DELETE</button>
    </form>
</section>
        </div>
        </div>
{{!--container--}}
</div> 
