<div class="container">
    <div class="row">
        <div class="twelve columns">
            <table class="u-full-width">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Age</th>
                  <th>Sex</th>
                  <th>Diagnostic</th>
                </tr>
              </thead>
              <tbody>
                {{#each items}}
                <tr>
                  <td>{{this.name}}</td>
                  <td>{{this.age}}</td>
                  <td>{{this.gender}}</td>
                  <td>{{this.description}}</td>    
                {{/each}}
              </tbody>
            </table>
        </div>
    </div>
</div>